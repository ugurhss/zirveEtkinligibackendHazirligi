# Laravel ve PHP dosyaları
*.php text eol=lf
*.php diff=php

# JavaScript ve JSON
*.js text eol=lf
*.json text eol=lf

# CSS ve SCSS
*.css text eol=lf
*.scss text eol=lf

# Blade templateleri
*.blade.php text eol=lf

# Git'in farklı davranması gereken dosyalar
*.svg binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.woff binary
*.woff2 binary

# Environment dosyaları (sensitive data)
.env export-ignore
.env.example export-ignore

# IDE/Editor dosyaları (isteğe bağlı olarak ignore edilebilir)
.idea export-ignore
.vscode export-ignore

# Composer/NPM dosyaları
composer.lock export-ignore
package-lock.json export-ignore
yarn.lock export-ignore

# Sistem dosyaları
.DS_Store export-ignore
Thumbs.db export-ignore

# Satır sonları için genel ayar
* text=auto
